@page "/edit"
@inject HttpClient Http

<form method="post">
	<input type="hidden"   /> //@Article.ID
	<div class="text-danger"></div>
	<div class="form-group">
		<label itemid="@Article.Topic" class="control-label">@Article.Topic</label>
		<input class="form-control" value="@Article.Topic" />
		<span title="@Article.Topic" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label itemid="@Article.Content" class="control-label">@Article.Content</label>
		<input class="form-control" value="@Article.Content" />
		<span title="@Article.Content" class="text-danger"></span>
	</div>
	<div class="form-group">
		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<span class="input-group-text">@Localizer["Upload"]</span>
			</div>
			<div class="custom-file">

			</div>
		</div>
	</div>
	</form>

}

@functions {
    WeatherForecast[] forecasts;

    protected override async Task OnInitAsync()
    {
        forecasts = await Http.GetJsonAsync<WeatherForecast[]>("sample-data/weather.json");
    }

    class WeatherForecast
    {
        public DateTime Date { get; set; }
        public int TemperatureC { get; set; }
        public int TemperatureF { get; set; }
        public string Summary { get; set; }
    }
}
